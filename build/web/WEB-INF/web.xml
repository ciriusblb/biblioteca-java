<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CLogin</servlet-name>
        <servlet-class>controller.CLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CAreas</servlet-name>
        <servlet-class>controller.CAreas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CLibros</servlet-name>
        <servlet-class>controller.CLibros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CUsuario</servlet-name>
        <servlet-class>controller.CUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CLogin</servlet-name>
        <url-pattern>/CLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CAreas</servlet-name>
        <url-pattern>/CAreas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CLibros</servlet-name>
        <url-pattern>/CLibros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CUsuario</servlet-name>
        <url-pattern>/CUsuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            CLogin
        </welcome-file>
        <welcome-file>
            CAreas
        </welcome-file>
        <welcome-file>
            CLibros
        </welcome-file>
        <welcome-file>
            CUsuario
        </welcome-file>
    </welcome-file-list>
</web-app>
